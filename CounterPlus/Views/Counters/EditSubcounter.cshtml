@model SubCounterModel

@{
    ViewData["Title"] = "Edytowanie podlicznika";
    Layout = "_LayoutSignedIn";
}

<h2>Edytowanie podlicznika</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSubcounter">
            <div class="text-danger"></div>
            @Html.Hidden("counterId", TempData["CounterId"])
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Counter" asp-route-id="@TempData["CounterId"]">Powrót do licznika</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}