@model CounterPlus.Models.CounterModel

@{
    ViewData["Title"] = "Licznik";
    Layout = "_LayoutSignedIn";
}

<h1>Licznik</h1>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Count)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
    <h3>Podliczniki</h3>
    <p>
        <a asp-action="CreateSubcounter" asp-route-counterID="@Model.Id">Dodaj nowy</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SubCounters.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubCounters.First().Count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubCounters.First().Active)
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.SubCounters) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditSubcounter", new { id=item.Id, counterId = Model.Id }) |
                    @Html.ActionLink("Delete", "DeleteSubcounter", new { item.Id, counterId = Model.Id })
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
