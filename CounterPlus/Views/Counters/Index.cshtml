@model IEnumerable<CounterPlus.Models.CounterModel>

@{
    ViewData["Title"] = "Lista liczników";
    Layout = "_LayoutSignedIn";
}

<h1>Lista liczników</h1>

<p>
    <a asp-action="Create">Dodaj nowy licznik</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                Akcje
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { item.Id }) |
                @Html.ActionLink("Wyświetl licznik", "Counter", new { item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>
